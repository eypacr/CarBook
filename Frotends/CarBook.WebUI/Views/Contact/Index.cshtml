@model CreateContactDto

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            @await Component.InvokeAsync("_FooterAddressComponentPartial")
            <div class="col-md-8 block-9 mb-md-5">
                <form class="bg-light p-5 contact-form" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Ad-Soyad" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Email" asp-for="Email">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Konu" asp-for="Subject">
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder="Mesaj"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Mesajı Gönder" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
                <div class="row justify-content-center">
                    <div class="col md-12 ">
                        <div class="bg-white"><a href="https://yandex.com.tr/harita/org/cumhuriyet_meydani_parki/79938228122/?utm_medium=mapframe&utm_source=maps" style="color:#eee;font-size:12px;position:absolute;top:0px;">Cumhuriyet Meydanı Parkı</a><a href="https://yandex.com.tr/harita/104689/kiziltepe/category/park/184106346/?utm_medium=mapframe&utm_source=maps"></a><iframe src="https://yandex.com.tr/map-widget/v1/?ll=40.584713%2C37.191860&mode=poi&poi%5Bpoint%5D=40.584081%2C37.191963&poi%5Buri%5D=ymapsbm1%3A%2F%2Forg%3Foid%3D79938228122&source=serp_navig&z=19.8" width="730" height="500" ></iframe></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>